<h1>Sign-In</h1>

<%= form_tag("/sessions", method: "post") do %>
  <div id="login-form">
    <%= text_field_tag(:username) %>
    <%= label_tag(:username, "Username") %>
    <%= password_field_tag(:password) %>
    <%= label_tag(:password, "Password") %>
    <%= submit_tag("Sign-In") %>
  </div>
<% end %>

<%= link_to "Cancel", root_path %>